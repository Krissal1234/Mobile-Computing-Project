<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




    <EditText
        android:id="@+id/departure_date"
        android:color="#001514"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="340dp"
        android:hint="Departure Date"
        android:textColor="#ffffff"
        android:inputType="none"
        android:textColorHint="#ffffff"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="#001514"
        android:background="@drawable/rectangle_edit_text"
        android:padding="12dp"
        />

    <Spinner
        android:id="@+id/origin_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="8dp"
        android:background="@drawable/rectangle_edit_text"
        android:padding="12dp"
        android:backgroundTint="#ffffff"
        android:textColor="#ffffff"
        android:outlineSpotShadowColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.446" />

    <EditText
        android:id="@+id/return_date"
        android:textColorHint="#ffffff"
        android:layout_width="209dp"
        android:layout_height="0dp"
        android:background="@drawable/rectangle_edit_text"
        android:padding="12dp"
        android:backgroundTint="#001514"
        android:textColor="#ffffff"
        android:hint="Return Date"
        android:inputType="none"
        app:layout_constraintBottom_toBottomOf="@+id/departure_date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/guideline"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#001514"
        app:layout_constraintGuide_percent="0.5" />

    <Button
        android:id="@+id/search_button"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find My Trip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/return_date"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/departure_date"
        app:layout_constraintTop_toBottomOf="@+id/return_date"
        app:layout_constraintVertical_bias="0.0"
        />
</androidx.constraintlayout.widget.ConstraintLayout>